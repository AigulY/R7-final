<h2>Driver</h2>
<%= render @driver %>

<div class="btn-group" role="group" aria-label="Driver Actions">
  <%= link_to "Edit this driver", edit_driver_path(@driver), class: "btn btn-primary mx-1" %> 
  <%= link_to "Back to drivers", drivers_path, class: "btn btn-outline-primary mx-1" %> 
  <%= button_to "Delete this driver", @driver, method: :delete, data: { turbo_confirm: "Please confirm the deletion"}, class: "btn btn-danger mx-1" %>
</div>

<% if @driver.vehicles.present? %>
  <h3>Driver's vehicle</h3>
  <div class="container mx-1">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Vehicle Unit number</th>
        <th>Vehicle Plate number</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <% @driver.vehicles.each do |vehicle| %>
          <tr>
            <td><%= icon('fa-solid', 'shopping-cart') %></td>
            <td><%= vehicle.id %></td>
            <td><%= vehicle.unit.number %></td>
            <td><%= link_to 'Show', vehicle, class: "btn btn-outline-secondary mx-1" %></td>
            <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class: "btn btn-outline-secondary mx-1" %></td>
            <td><%= button_to 'Delete', vehicle, method: :delete, data: { turbo_confirm: "Please confirm the deletion"}, class: "btn btn-outline-danger mx-1" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>