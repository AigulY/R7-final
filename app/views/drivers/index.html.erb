<div class="container mt-4">
  <h1>Drivers</h1>
  <%= link_to 'New Driver', new_driver_path, class: 'btn btn-primary mb-3' %>
  <table class="table">
    <thead>
      <tr>
        <th> </th>
        <th>Full Name</th>
        <th>Unit number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= icon('fa-regular', 'user') %></td>
        <td><%= driver.first_name %> <%= driver.last_name %></td>
        <td>
          <% driver.vehicles.each do |vehicle| %>
            <%= vehicle.unit_number %><br>
          <% end %>
        </td>
        <td>
          <%= link_to "Show this driver", driver, class: "btn btn-outline-primary mx-1" %>
        </td>
      </tr>
    <% end %>

