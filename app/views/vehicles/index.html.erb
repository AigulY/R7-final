<div class="container mt-4">
  <h1>Vehicles</h1>
  <%= link_to 'New Vehicle', new_vehicle_path, class: 'btn btn-primary mb-3' %>
  <table class="table">
    <thead>
      <tr>
        <th>Unit Number</th>
        <th>Plate Number</th>
        <th>VIN Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.unit_number %></td>
          <td><%= vehicle.plate_number %></td>
          <td><%= vehicle.vin_number %></td>
          <td>
            <%= link_to 'Show', vehicle, class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_vehicle_path(vehicle), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>